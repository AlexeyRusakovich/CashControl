@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CashControl.Models.Users

<div class="col-md-4  col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Sign Up</h3>
        </div>
        <div class="panel-body">
            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" placeholder="Login" name="Login" type="text" autofocus="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Password" name="password" type="password" value="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Confirm Password" name="password" type="password" value="">
                    </div>
                    <a href="javascript:;" class="btn btn-sm btn-success">Sign Up</a>
                </fieldset>
            </form>
        </div>
    </div>
</div>
